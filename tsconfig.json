{
  "compilerOptions": {
    "target": "es6",
    "lib": ["es2019", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "pretty": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "removeComments": true,
    "emitDeclarationOnly": true,
    "outDir": "build",
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "noImplicitThis": false,
    "baseUrl": "./packages",
    "sourceMap": false
  },
  "include": ["./packages"],
  "exclude": ["./node_modules/**/*"]
}
